<resources>
   <!-- <style name="AppBaseTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen"></style>-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

    <style name="sidebarText" parent="android:TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seekBarColor" parent="android:Widget.DeviceDefault.SeekBar">
        <item name="android:maxHeight">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:max">255</item>
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="seekBarLight" parent="seekBarColor">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="gestureButton" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">60px</item>
        <item name="android:layout_height">60px</item>
        <item name="android:paddingLeft">7px</item>
        <item name="android:paddingRight">7px</item>
        <item name="android:paddingTop">5px</item>
        <item name="android:paddingBottom">5px</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="joystickButton" parent="android:Widget.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="pickImageButton" parent="android:Widget.Button">
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100px</item>

    </style>

    <style name="divider">
        <item name="android:background">@drawable/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>


</resources>